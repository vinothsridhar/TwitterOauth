	public void getLatLng()
	{
		if(Constants.companyGeoloc.length()>2)
		{
			String str[]=Constants.companyGeoloc.split(",");
			latitude=Double.parseDouble(str[0]);
			longitude=Double.parseDouble(str[1]);
			if(!shopLocationEnabled)
			{
			destMarker=mMap.addMarker(new MarkerOptions().position(new LatLng(latitude, longitude)).title(Constants.companyName).snippet(Constants.companyAddress).icon(BitmapDescriptorFactory.fromResource(R.drawable.dest_marker)));
			//destMarker.setSnippet(Constants.companyAddress);
			mMap.addCircle(new CircleOptions().center(new LatLng(latitude, longitude)).strokeWidth(2).radius(50).strokeColor(0x20851313));
			shopLocationEnabled=true;
			}
			
			mMap.moveCamera(CameraUpdateFactory.newLatLngZoom(new LatLng(latitude, longitude), 14f));
		}
				
		mMap.setOnCameraChangeListener(mapchange);
		mMap.setOnMapClickListener(mapclick);
	}
	
	public void Setyourlocation()
	{	
		if(locationManager.isProviderEnabled(LocationManager.GPS_PROVIDER))
		{
			//sourceMarker=mMap.addMarker(new MarkerOptions().position(new LatLng(gpslocation.getLatitude(), gpslocation.getLongitude())));
			yourlocationenabled=true;
			setLocation();
		}
		else
		{
			new EnableGpsDialogFragment().show(getSupportFragmentManager(), "Enable Dialog");
			yourlocationenabled=false;
		}
	}
	
	View.OnClickListener yourlocationClickListener=new OnClickListener() {
		
		@Override
		public void onClick(View arg0) {
			// TODO Auto-generated method stub
			Setyourlocation();
		}
	};
	
