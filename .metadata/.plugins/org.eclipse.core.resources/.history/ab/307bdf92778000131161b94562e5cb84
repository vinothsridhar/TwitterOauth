		}
	};
	
	View.OnClickListener pathOnClickListener=new OnClickListener() {
		
		@Override
		public void onClick(View arg0) {
			// TODO Auto-generated method stub
			if(yourlocationenabled)
				new LoadingmapPath().execute();
			else
				Toast.makeText(getApplicationContext(), "Unable to find your location. Kindly switch on the gps of your mobile or other problem.", 4000).show();
		}
	};
	
	@Override
	public void onLocationChanged(Location arg0) {
		// TODO Auto-generated method stub
		gpslocation=arg0;
		userlat=arg0.getLatitude();
		userlng=arg0.getLongitude();
		if(sourceMarker==null)
			sourceMarker=mMap.addMarker(new MarkerOptions().position(new LatLng(userlat, userlng)));
		else
			sourceMarker.setPosition(new LatLng(userlat, userlng));
	}

	@Override
	public void onProviderDisabled(String arg0) {
